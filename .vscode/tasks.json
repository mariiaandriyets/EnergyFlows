{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "cmake --build build",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "dependsOn": "copy-font"
      },
      {
        "label": "copy-font",
        "type": "shell",
        "command": "cp arial.ttf build/",
        "problemMatcher": []
      }
    ]
  }
  
  